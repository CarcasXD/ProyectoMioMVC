@{
}
<h1>Mantenimiento de Equipos</h1>
<br />
<form ascp-action="CrearEquipos">
    @*Inicio del formulario*@
    <div class="form-group row mb-4">
        <div class="form-group row mb-4">
            <label>Nombre</label>
        </div>
        <div class="form-group row mb-4">
            @Html.TextBox("nombre", "", new { @class = "form-control" })
        </div>
        <div class="form-group row mb-4">
            @Html.Label("lblDescripcion", "Descripción")
        </div>
        <div class="form-group row mb-4">
            @Html.TextArea("descripcion", "", new { @class = "form-control", @Placeholder = "Ingrese la descripción" })
        </div>
        <div class="form-group row mb-4">
            @Html.DropDownList("marcas_id", ViewData["listadoDeMarcas"] as SelectList, "Seleccione una marca", new { @class = "form-control" })
        </div>
        <div class="form-group row mb-4">
            <div class="col-sm-2"></div>
            <div class="col-sm-4">
                <input type="submit" class="btn btn-primary" value="Guardar" />
            </div>
        </div>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Equipo</th>
                    <th>Descripción</th>
                    <th>Marca</th>
                </tr>
            </thead>
            <tbody>
            <tbody>
                    @foreach (var equipo in (IEnumerable<dynamic>)ViewData["ListadoEquipo"])
                    {
                    <tr>
                        <td>@equipo.nombre</td>
                        <td>@equipo.descripcion</td>
                        <td>@equipo.marca_nombre</td>
                    </tr>
                    }
            </tbody>
            </tbody>
        </table>

    </div>

    @*Fin del formulario*@
</form>
